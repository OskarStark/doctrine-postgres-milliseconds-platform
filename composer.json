{
    "name": "oskarstark/doctrine-postgres-milliseconds-platform",
    "type": "library",
    "description": "A Doctrine DBAL platform for Postgres with millisecond support",
    "license": "MIT",
    "authors": [
        {
            "name": "Oskar Stark",
            "email": "oskarstark@googlemail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "doctrine/dbal": "^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.2",
        "ergebnis/test-util": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-webmozart-assert": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "OskarStark\\Doctrine\\Postgres\\Platform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OskarStark\\Doctrine\\Postgres\\Platform\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "cs": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "cs-check": [
            "vendor/bin/php-cs-fixer fix --diff --dry-run --verbose"
        ],
        "phpstan": [
            "@php -d memory_limit=-1 vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress"
        ],
        "phpstan-baseline": [
            "@php -d memory_limit=-1 vendor/bin/phpstan analyse --configuration phpstan.neon --generate-baseline=phpstan-baseline.neon --no-progress"
        ],
        "test": [
            "@php -d memory_limit=-1 vendor/bin/phpunit"
        ]
    }
}
